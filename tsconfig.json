  {
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "removeComments": true,
  },
  "include": ["**/*.ts"]
}
